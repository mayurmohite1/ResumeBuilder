<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resume</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link href="/public/template.css" rel="stylesheet" type="text/css" />
  </head>
  <body>
    <div class="container" id="cv-form">
      <h1 class="text-center my-3">Build Your Resume</h1>

      <div class="row">
        <!-- first column -->
        <div class="col-md-6">
          <h3 class="text-center my-3">Personal Information</h3>

          <!-- Your name -->
          <div class="form-group">
            <label for="nameField">Name</label>
            <input
              type="text"
              id="nameField"
              placeholder="Your full name"
              class="form-control"
            />
          </div>

          <!-- Contact Number -->
          <div class="form-group mt-3">
            <label for="contactField">Contact</label>
            <input
              type="text"
              id="contactField"
              placeholder="Contact Number"
              class="form-control"
            />
          </div>
          <!-- Address -->
          <div class="form-group mt-3">
            <label for="addressField">Address</label>
            <textarea
              id="addressField"
              placeholder="Residential address"
              class="form-control"
              rows="5"
            ></textarea>
          </div>
          <!-- Links -->
          <p class="text-secondary my-3">Important Links</p>
          <div class="form-group mt-2">
            <label for="fbField">Facebook </label>
            <input
              type="text"
              id="fbField"
              placeholder="link"
              class="form-control"
            />
          </div>
          <div class="form-group mt-2">
            <label for="instaField">Instagram</label>
            <input
              type="text"
              id="instaField"
              placeholder="link"
              class="form-control"
            />
          </div>
          <div class="form-group my-2">
            <label for="linkedField">LinkedIn</label>
            <input
              type="text"
              id="LinkedField"
              placeholder="link"
              class="form-control"
            />
          </div>
        </div>

        <!-- second column -->
        <div class="col-md-6">
          <h3 class="text-center my-3">Professional Information</h3>
          <!-- Objective -->
          <div class="form-group mt-3">
            <label for="">Objective</label>
            <textarea
              id="objectiveField"
              rows="3"
              placeholder="Enter here"
              class="form-control"
            ></textarea>
          </div>
          <!-- Work experience -->
          <div class="form-group mt-3" id="we">
            <label for="">Work experience</label>
            <textarea
              placeholder="Enter here"
              class="form-control weField"
              rows="3"
            ></textarea>

            <!-- Work Experience adding dynamically -->
            <div class="container text-center mt-3" id="weAddButton">
              <button onclick="addNewWEField()" class="btn btn-primary btn-sm">
                Add
              </button>
            </div>
          </div>

          <!-- Education Qualification -->
          <div class="form-group mt-3" id="eq">
            <label for="">Education Qualification</label>
            <textarea
              rows="3"
              placeholder="Enter here"
              class="form-control eqField"
              rows="2"
            ></textarea>

            <!-- Education Qualification adding dynamically -->
            <div class="container text-center mt-3" id="eqAddButton">
              <button onclick="addNewEQField()" class="btn btn-primary btn-sm">
                Add
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Generate Resume Button -->
      <div class="container text-center my-5">
        <button onclick="generateCV()" class="btn btn-dark btn-lg">
          Generate CV
        </button>
      </div>
    </div>

    <!-- CV template1 -->
